{
	 "manifest_version": 2,
   "name": "Y Smart",
   "permissions": [ "tabs", 
   		"http://*/*", 
   		"https://*/*",
   		"storage" 
   	],
   "update_url": "https://github.com/Y-Smart",
   "version": "1.0.0",
   "background": {
   		"scripts": ["background.js"]
   },
 
   "content_scripts": [ {
      "css": [ "content.css" ],
      "js": [ "js/jquery.js", "content.js" ],
      "matches": [ "http://*/*", "https://*/*" ]
   } ],
   "description": "Y Smart, a light knowledge graph",
   "icons": {
      "48": "Y.jpg"
   },
   "browser_action": {
   		"default_title": "Auto Search: OFF",
   		"default_icon": "Y2.jpg"
   		
   }
}
