{
   "name": "Y Smart",
   "manifest_version": 2,
   "description": "Tell you what you want to know immediately",
   "content_scripts": [ {
      "css": [ "css/content.css" ],
      "js": [ "js/jquery.js", "js/content.js" ],
      "matches": [ "http://*/*", "https://*/*" ]
   } ],
   "icons": {
      "48": "icon/astroboy.jpg"
   },
   "permissions": [ "tabs", "http://*/*", "https://*/*" ],
   "background": {
		"scripts": ["js/background.js"]
   },
   "browser_action": {
		"default_icon": "icon/manual.jpg",
		"default_title": "Manual"
   },
   "update_url": "https://github.com/ithlony/Y-Smart/",
   "version": "1.0"
}
